<%@their_play = ["rock", "paper", "scissors"].sample%>
<h2>We played paper!</h2>
<h2>They played <%= @their_play %>!</h2>

<% if @their_play == "paper" %>
  <% @outcome = "lost" %>
<% elsif @their_play == "rock" %>
  <% @outcome = "tied" %>
<% else %>
  <% @outcome = "won" %>
<% end %>

<h2>We <%= @outcome %>!</h2>
